{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "prettier",
        "eslint:recommended",
        "plugin:vue/vue3-recommended",
        "@vue/eslint-config-typescript"
    ],
    "rules": {
        // Global
        "quotes": ["error", "double"],
        "semi": ["error", "never"],

        // Vue
        "vue/no-unused-vars": "error",
        "vue/multi-word-component-names": "off",
        "vue/html-indent": ["error", 4]
    }
}